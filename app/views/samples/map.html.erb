
<h1>YOUR SAMPLES</h1>
<div class="row justify-content-md-center">
    <div class="col col-lg-2"></div>
    
    <div class="col col-lg-2">
        <br>
      <button id="change-map">MAP VIEW</button>
    </div>
    
    <div class="col col-lg-2">
      <br>
      <button id="change-list">LIST VIEW</button>
    </div>
    <div class="col col-lg-2">
      <br>
      <button id="change-grid">GRID VIEW</button>
    </div>
</div>

<div id="list-view">
    <% @locations['data'].each do |sample| %>
    <div class="row" id="row-<%= sample['id'] %>">
        
        <div class="box-list" id="box-<%= sample['id'] %>">
            <div class="crop">
                <img src= "<%= sample['photo'] %>"/>
            </div>
            <table>
                <tr>
                    <td>Weather</td>
                    <td><%= sample['weather'] %></td>
                </tr>
            </table>
            <%= link_to "Read more > ", samples_path(sample['id']) %>
        </div>
    </div>
    <% end %>
</div>

<div id="grid-view">
    <% @locations['data'].each do |sample| %>
        <div class="grid">
            <div class="crop">
                <img src= "<%= sample['photo'] %>"/>
            </div>
            <table>
                <tr>
                    <td>Weather</td>
                    <td><%= sample['weather'] %></td>
                </tr>
            </table>
            <%= link_to "Read more > ", samples_path(sample['id']) %>
        </div>
    <% end %>
</div>

<div id="map"></div>


