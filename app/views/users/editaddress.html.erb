<% provide(:title, "Edit Address") %>
<div class="center jumbotron">
  <h1>Edit Address</h1>

  <div class="container">
      <div class="row jutify-content-center">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(@update, url: editaddress_path) do |f| %>
      
            <div class="form-group row">
              <div class="col-10">
                <%= f.text_field :line1, class: 'form-control', 
                     :value => @user['address']['line1'] %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-10">
                <%= f.text_field :line2, class: 'form-control', 
                     :value => @user['address']['line2'] %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-10">
                <%= f.text_field :postcode, class: 'form-control', 
                     :value => @user['address']['postcode'] %>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-10">
                  <%= f.text_field :state, class: 'form-control', 
                     :value => @user['address']['state'] %>
              </div>
            </div>
            
            <%= f.submit "Update", class: "btn btn-primary" %>
            <% end %>
      
          
          
        </div>
      </div>
  </div>

</div>
