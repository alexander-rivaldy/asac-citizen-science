
  
<% provide(:title, 'Sign Up') %>


<div class="center jumbotron">
 <h1>Sign Up</h1>
  <!--<div class="col-md-6 col-md-offset-3">-->
    <%-# there's a bug that prints the same error twice -%>
    <%= form_for(@register, url: signup_path) do |f| %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col">
          <div class="form-group row">
            <div class="col-10">
              <%= f.text_field :name, class: 'form-control', :placeholder => :name %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.text_field :address_line1, class: 'form-control', :placeholder => :address_line_1 %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.text_field :postcode, class: 'form-control', :placeholder => :postcode %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.password_field :password, class: 'form-control', :placeholder => :password %>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="form-group row">
            <div class="col-10">
              <%= f.email_field :email, class: 'form-control', :placeholder => :email %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.text_field :address_line2, class: 'form-control', :placeholder => :address_line_2 %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.text_field :state, class: 'form-control', :placeholder => :state %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-10">
              <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => :password_confirmation %>
            </div>
          </div>
        </div>
      </div>
    </div>
  
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  <!--</div>-->
</div>